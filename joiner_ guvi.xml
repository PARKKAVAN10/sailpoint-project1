<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE Workflow PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<Workflow explicitTransitions="true" libraries="Identity" name="joiner - guvi" type="IdentityLifecycle">
  <Variable input="true" name="trigger">
    <Description>The IdentityTrigger</Description>
  </Variable>
  <Variable input="true" name="event" transient="true">
    <Description>The IdentityChangeEvent.  It can be used to build
      the provisioning plan, but does not need to be
      persisted with the case, so marked as transient.</Description>
  </Variable>
  <Variable input="true" name="identityName">
    <Description>The name of the identity.</Description>
  </Variable>
  <Variable input="true" name="plan"/>
  <Variable input="true" name="project"/>
  <Description>Process a new employee.</Description>
  <Step icon="Start" name="Start" posX="28" posY="10">
    <Transition to="Create Provisioning Plan"/>
  </Step>
  <Step icon="Stop" name="Stop" posX="527" posY="10"/>
  <Step action="rule:contract joiner workflow rule create plan" icon="Task" name="Create Provisioning Plan" posX="135" posY="10" resultVariable="plan">
    <Arg name="identityName" value="ref:identityName"/>
    <Transition to="Create Project"/>
  </Step>
  <Step action="compileProvisioningProject" icon="Task" name="Create Project" posX="272" posY="10" resultVariable="project">
    <Arg name="plan" value="ref:plan"/>
    <Transition to="provision"/>
  </Step>
  <Step action="provisionProject" icon="Task" name="provision" posX="399" posY="11">
    <Arg name="project" value="ref:project"/>
    <Transition to="Stop"/>
  </Step>
</Workflow>